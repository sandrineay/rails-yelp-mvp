<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name, label: "Enter the name of the restaurant" %>
        <%= f.input :address, label: "Enter its address" %>
        <%= f.input :phone_number, label: "Enter its phone number" %>
        <%= f.input :category, label: "Enter its category" %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
